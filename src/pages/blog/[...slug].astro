---
import { getCollection } from 'astro:content';
import Base from '../../layouts/base.astro';
import Tag from '../../components/Tag.astro';
import Prose from '../../components/prose.astro';
import CommentSection from '../../components/comments/CommentSection.astro';

export async function getStaticPaths() {
    const posts = await getCollection('blog');
    return posts.map(post => ({
        params: { slug: post.slug },
        props: { post },
    }));
}

const { post } = Astro.props;
const { Content } = await post.render();

const formattedDate = new Intl.DateTimeFormat('en-US', {
    month: '2-digit',
    day: '2-digit',
    year: 'numeric'
}).format(post.data.date);

// Format date for sorting (YYYY-MM-DD format for proper sorting)
const sortableDate = post.data.date.toISOString().split('T')[0];
---

<Base>
    <!-- Pagefind sorting metadata -->
    <div style="display: none;"
         data-pagefind-sort="date[data-date], title[data-title]"
         data-date={sortableDate}
         data-title={post.data.title}>
    </div>

    <!-- Back button -->
    <div data-pagefind-ignore class="px-4 mb-6">
        <a
            href="/blog"
            class="inline-flex items-center text-sm text-neutral-600 hover:text-neutral-900 dark:text-neutral-400 dark:hover:text-neutral-200 transition-colors"
        >
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mr-1">
                <path d="m15 18-6-6 6-6"/>
            </svg>
            Back to Blog
        </a>
    </div>

    <!-- Main Content Card -->
    <article class="px-4">
        <div class="p-6 rounded-lg border border-neutral-200 dark:border-neutral-800">
            <h1 class="text-3xl font-bold mb-3 text-stone-900 dark:text-zinc-50">
                {post.data.title}
            </h1>

            <div class="flex items-center gap-3 text-sm mb-6 pb-6 border-b border-neutral-200 dark:border-neutral-800">
                <time datetime={post.data.date.toISOString()} class="text-neutral-600 dark:text-neutral-400">
                    {formattedDate}
                </time>
                <div class="flex gap-2">
                    {post.data.tags.map(tag => (
                        <Tag name={tag} />
                    ))}
                </div>
            </div>

            <div class="max-w-none">
                <Prose>
                    <Content />
                </Prose>
            </div>
        </div>

        <!-- Comments Section -->
        <CommentSection postSlug={post.slug} />
    </article>
</Base>
