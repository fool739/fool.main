---
import { getCollection } from 'astro:content';
import Prose from '../../components/prose.astro'
import Base from '../../layouts/base.astro';
import Blog from '../../components/blog.astro'

export async function getStaticPaths() {
    const blogEntries = await getCollection('blog');
    return blogEntries.map(entry => ({
        params: { slug: entry.slug }, props: { entry },
    }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
---

<Base>

    <div class="jester block w-full my-5"><Blog /></div>

    <article>
            <h1 class="text-3xl font-bold mb-1">{entry.data.title}</h1>
            <h2 class="text-xl font-bold mb-1">{entry.data.description}</h2>
            <p class="text-zinc-500 mb-2">{entry.data.date}</p>
            <hr class="mb-4 bg-zinc-50">
        <Prose>
        <Content />
    </Prose>
    </article>
</Base>