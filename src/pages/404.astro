---
import Base from '../layouts/base.astro';
import Error from '../components/404.astro'
---
<Base>
    
<Error/>

<hr class="h-2 my-4 bg-zinc-50">

<p class="text-3xl text-center font-bold animate-bounce">404 ERROR :[</p>

</Base>

<style>
    
    p:hover {
    cursor: url('cursor.cur') pointer;
    -webkit-animation: rainbow 5s infinite;
    animation: rainbow 8s infinite;
 }
    @-webkit-keyframes rainbow {
    0%, 100% { color: #ffffff; }
  16%      { color: #ef655e; }
  32%      { color: #f8fc80; }
  48%      { color: #66ec78; }
  64%      { color: #5552ec; }
  80%      { color: #c32957; }
  }
  @keyframes rainbow {
    0%, 100% { color: #ffffff; }
    16%      { color: #ef655e; }
    32%      { color: #f8fc80; }
    48%     { color: #66ec78; }
    65%    { color: #5552ec; }
    80%      { color: #c32957; }
  }

</style>