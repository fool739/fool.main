---
const { name } = Astro.props;

const tagStyles = {
    update: 'bg-blue-100 text-blue-700 dark:bg-blue-900 dark:text-blue-300',
    life: 'bg-green-100 text-green-700 dark:bg-green-900 dark:text-green-300',
    rant: 'bg-red-100 text-red-700 dark:bg-red-900 dark:text-red-300',
    blog: 'bg-neutral-200 text-neutral-700 dark:bg-neutral-800 dark:text-neutral-300',
    default: 'bg-neutral-200 text-neutral-700 dark:bg-neutral-800 dark:text-neutral-300'
};

const tagStyle = tagStyles[name.toLowerCase() as keyof typeof tagStyles] || tagStyles.default;
---

<span class={`px-2 py-0.5 text-sm rounded-md ${tagStyle}`}>
    {name}
</span>
