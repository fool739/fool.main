---
const projects = [
    {
        title: "fool.ltd",
        description: "this website.",
        tags: ["typescript", "astro", "tailwind"],
        link: "https://github.com/fool739/fool.main"
    },
];
---

<div class="px-4 grid gap-8">
    {projects.map(project => (
        <a href={project.link} target="_blank" rel="noopener noreferrer" class="block no-underline">
            <article class="p-6 rounded-lg border border-neutral-200 dark:border-neutral-800 hover:border-neutral-400 dark:hover:border-neutral-600 transition-colors">
                <h2 class="text-2xl font-bold mb-2 text-stone-900 dark:text-zinc-50">
                    {project.title}
                </h2>
                <div class="flex gap-2 mb-4">
                    {project.tags.map(tag => (
                        <span class="px-2 py-0.5 text-sm rounded-md bg-neutral-200 text-neutral-700 dark:bg-neutral-800 dark:text-neutral-300">
                            {tag}
                        </span>
                    ))}
                </div>
                <p class="text-neutral-600 dark:text-neutral-400">
                    {project.description}
                </p>
            </article>
        </a>
    ))}
</div>
